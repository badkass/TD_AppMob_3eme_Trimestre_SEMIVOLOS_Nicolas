<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/Splash"
tools:context=".SplashScreen">

<TextView
    android:id="@+id/Tv_splash"
    android:layout_width="match_parent"
    android:layout_height="@dimen/Size_Et_splash"
    android:layout_marginTop="@dimen/marginTop_splash"
    android:gravity="center_horizontal"
    android:text="@string/chargement"
    android:textColor="@color/black"
    android:textSize="@dimen/textsize_splash" />

<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/Height_splash"
    android:layout_below="@id/Tv_splash"
    android:layout_centerVertical="true"
    android:layout_marginTop="@dimen/marginTop2"
    android:contentDescription="@string/desc_splash_screen"
    android:src="@drawable/android_splash" />

</RelativeLayout>